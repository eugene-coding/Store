@model LanguageView

<form id="@IndexModel.FormId" method="post">
    @if (Model.Id > 0)
    {
        <input asp-for="@Model.Id" />
    }

    <div class="row mb-3">
        <label asp-for="@Model.Name" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-10">
            <input asp-for="@Model.Name" class="form-control" />
            <span asp-validation-for="@Model.Name" class="text-danger"></span>
        </div>
    </div>

    <div class="row mb-3">
        <label asp-for="@Model.Code" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-10">
            <input asp-for="@Model.Code" class="form-control" />
            <span asp-validation-for="@Model.Code" class="text-danger"></span>
        </div>
    </div>

    <div class="row mb-3">
        <label asp-for="@Model.SortOrder" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-10">
            <input asp-for="@Model.SortOrder" class="form-control" />
            <span asp-validation-for="@Model.SortOrder" class="text-danger"></span>
        </div>
    </div>

    <div class="row mb-3">
        <label asp-for="@Model.Enabled" class="col-sm-2 col-form-label"></label>

        <div class="col-sm-10">
            <div class="form-check form-switch">
                <input asp-for="@Model.Enabled" class="form-check-input" />
                <span asp-validation-for="@Model.Enabled" class="text-danger"></span>
            </div>
        </div>
    </div>
</form>
