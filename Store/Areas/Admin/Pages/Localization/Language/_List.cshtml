@model IReadOnlyCollection<LanguageView>
@inject IStringLocalizer<IndexModel> localizer

@if (Model.Count > 0)
{
    @foreach (var language in Model)
    {
        <tr>
            <th scope="row">
                <input class="form-check-input" type="checkbox" name="@JavascriptVariables.Instance.CheckboxName" value="@language.Id" />
            </th>

            <td>@language.Name</td>
            <td>@language.Code</td>
            <td>@language.SortOrder</td>
            <td>@language.Enabled</td>

            <td>
                <button type="button" class="btn btn-primary" name="@JavascriptVariables.Instance.EditLanguageButtonName" data-id="@language.Id">
                    <i class="fa-solid fa-pencil"></i>
                </button>

                <button type="button" class="btn btn-danger" name="@JavascriptVariables.Instance.DeleteLanguageButtonName" data-id="@language.Id">
                    <i class="fa-solid fa-trash-can"></i>
                </button>
            </td>
        </tr>
    }
}
else
{
    <tr>
        <td scope="row" colspan="6" class="text-center">@localizer["No result"]</td>
    </tr>
}
